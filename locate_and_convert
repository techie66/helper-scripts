#!/bin/bash
find . \! -name "TheCos*" \! -name "Valero*" -size +1900M -exec bash -c 'name="{}";mv "$name" "${name%.*}.in"; HandBrakeCLI --native-language eng --subtitle scan,1 --subtitle-forced 1 --quality 22 --maxWidth 720 --format mkv --input "${name%.*}.in" --encoder x264 --aencoder copy --audio-copy-mask dtshd,dts,ac3,mp3 --audio-fallback lame --output "${name%.*}.mkv"; rm "${name%.*}.in" ' \; -o -path "*3D" -prune
